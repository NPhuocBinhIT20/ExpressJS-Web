<%- include ('partials/header') %>

<div>
  <h2>List All Users</h2>
  <ul>
    <button href="/user/add" class="btn btn-primary">Add User</button>
  </ul>
  <div>
    <table class="w3-table-all w3-hoverable">
      <thead>
        <tr class="w3-light-grey">
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < dataUsers.length; i++) { %>
        <tr>
          <td><%= dataUsers[i].id %></td>
          <td><%= dataUsers[i].firstName %></td>
          <td>
            <%= dataUsers[i].lastName %></td>
          <td><%= dataUsers[i].email %></td>
          <td><%= dataUsers[i].address %></td>
          <td>
            <a href="/user/detail/<%= dataUsers[i].id%>"></a>
            <button type="button" href="/user/update/<%= dataUsers[i].id %>">Edit</button>
            <button type="button" href="/user/delete/<%= dataUsers[i].id %>">Delete</button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<%- include ('partials/footer') %>
